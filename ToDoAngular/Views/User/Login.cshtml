@model ToDoAngular.Entities.User
@{
    ViewBag.Title = "Login";
}

<div class="container" style="margin-top:30px">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Strona logowania </strong></h3>
            </div>

            <div class="panel-body">
                <form role="form"  method="POST">
                    @Html.ValidationSummary(false)
                    @*<div class="alert alert-danger">
                        <a class="close" data-dismiss="alert" href="#">×</a>
                    </div>*@
                    <div style="margin-bottom: 12px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(a=> a.Username, new { @class="form-control"})
                    </div>

                    <div style="margin-bottom: 12px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "password" })
                    </div>

                    <div class="input-group">
                        <div class="checkbox" style="margin-top: 0px;">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">zaloguj się</button>

                    <hr style="margin-top:10px;margin-bottom:10px;">

                    <div class="form-group">


                    </div>
                </form>
            </div>
        </div>
    </div>
</div>